# Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# LLM API Keys
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_organization_id_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ===========================================
# Vector Database Configuration
# ===========================================

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here

# Qdrant Configuration (if using cloud)
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=your_qdrant_cluster_url_here

# Weaviate Configuration (if using cloud)
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_URL=your_weaviate_cluster_url_here

# ===========================================
# Traditional Database Configuration
# ===========================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_chatbot
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# ===========================================
# Caching Configuration
# ===========================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# Application Configuration
# ===========================================

# JWT Secret for API authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# ===========================================
# Monitoring and Alerting
# ===========================================

# Slack webhook for alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# ===========================================
# External Services
# ===========================================

# Google API key (for search, translation, etc.)
GOOGLE_API_KEY=your_google_api_key_here

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ===========================================
# Web Scraping Configuration
# ===========================================

# User agent for web scraping
USER_AGENT="RAG-Chatbot/1.0 (Educational Purpose)"

# Proxy configuration (if needed)
HTTP_PROXY=http://your-proxy:port
HTTPS_PROXY=https://your-proxy:port

# ===========================================
# Development Tools
# ===========================================

# Weights & Biases for experiment tracking
WANDB_API_KEY=your_wandb_api_key_here

# MLflow tracking server
MLFLOW_TRACKING_URI=http://localhost:5000

# ===========================================
# Security Settings
# ===========================================

# API rate limiting
RATE_LIMIT_PER_MINUTE=60

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=100

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,txt,docx,html,csv,json

# ===========================================
# Performance Settings
# ===========================================

# Maximum number of worker processes
MAX_WORKERS=4

# Batch size for processing
BATCH_SIZE=50

# Maximum context length for embeddings
MAX_CONTEXT_LENGTH=4000

# ===========================================
# Logging Configuration
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (text or json)
LOG_FORMAT=json

# Maximum log file size (MB)
LOG_MAX_SIZE_MB=100

# Number of backup log files
LOG_BACKUP_COUNT=5
